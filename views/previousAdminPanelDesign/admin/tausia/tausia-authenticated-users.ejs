<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="./images/logo-square.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/donate.css">
    <link rel="stylesheet" href="./css/admin.css">
    <style>
        .status-input {
            width: 150px;
            text-align: center;
            border: none;
            outline: none;
            background: transparent;
        }

        .file {
            max-width: 150px;
        }
    </style>
    <title>Tausia Admin Page || Subai Jamiat Ahle Hadees Mumbai</title>
</head>

<body>

    <%- include('./common/tausia-navbar') %>

        <div class="container">
            <div class="table-container">
                <table class="table table-striped">
                    <tr>
                        <th>
                            userId
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Tausia Id
                        </th>
                        <th>
                            Authentication Image
                        </th>

                    </tr>
                    <% if(TausiaData.length> 0){ %>
                        <% TausiaData.forEach(value=>{ %>

                            <tr>
                                <td class="no-break">
                                    <%= value.userId %>
                                </td>
                                <td class="no-break">
                                    <%= value.date %>
                                </td>
                                <td>
                                    <%= value.tausiaId %>
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" target="_blank"
                                        href="./tausiaAuthenticationImage/<%= value.authenticationImage %>">
                                        Show Image
                                    </a>
                                </td>

                            </tr>

                            <% }) %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="4">
                                            No Data Present
                                        </td>
                                    </tr>
                                    <% } %>
                </table>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>

</html>