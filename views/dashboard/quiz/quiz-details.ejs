<!DOCTYPE html>
<html lang="en" class="no-fs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/dashboard/dashboard.css" />
    <!-- fontawesome cdn link  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />

    <meta name="robots" content="noindex" />

    <title>Admin</title>
  </head>

  <body data-page="Quiz">
    <div class="main-container">
      <div class="mobile-dashboard"></div>

      <%- include('../common/dashboard-sidebar') %>

      <div class="right">
        <%- include('../common/dashboard-header') %>

        <div class="content">
          <div class="page">
            <span>
              <span class="bold">Dashboard</span>
              <i class="fa-solid fa-angle-right icon"></i>
            </span>
            <span>
              Quiz
              <i class="fa-solid fa-angle-right icon"></i>
            </span>
            <span> Quiz Details </span>
          </div>
          <div class="table">
            <div class="header no-input">
              <h3 class="heading"><%= data.quizTitle %></h3>

              <!-- <div class="input">
                    <i class="fa-solid fa-magnifying-glass search-icon "></i>
                    <input type="text" placeholder="Search students here">
                </div> -->
            </div>
            <div class="student-table-container">
              <table class="student-table">
                <tr>
                  <td>Question No</td>
                  <td>Question</td>
                  <td>Option A</td>
                  <td>Option B</td>
                  <td>Option C</td>
                  <td>Correct Option</td>
                </tr>
                <% if(data.length != 0){ %> <% data.quizQuestions.forEach((Question , index) =>{ %>
                <tr>
                  <td><%= Question.questionNo %></td>
                  <td><%= Question.question %></td>
                  <% Question.ans.forEach(option =>{ %>

                    <td>
                        <%= option.option %>
                    </td>

                    <% }) %>
                    <td>
                        <%= Question.correct_option %>
                    </td>
                </tr>
                <% }) %> <% }else { %>

                <tr>
                  <td colspan="6">No Data Present</td>
                </tr>

                <%} %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="./javascript/dashboard/dashboard.js"></script>
  </body>
</html>
