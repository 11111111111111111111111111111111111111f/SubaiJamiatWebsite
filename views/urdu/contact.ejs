<!DOCTYPE html>
<html lang="ur">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <title>Sobai Jamiat Ahle Hadees Mumbai</title> -->
    <!-- all css and js  files are here included -->
    <%- include('./common/css&js') %>
        <!-- own contact css file link  -->
        <link rel="stylesheet" href="./css/contact.css">
</head>

<body data-active="contact">


    <!-- header and chats and loading animation included here  -->
        <%- include('./common/loading') %>

        <%- include('./common/header') %>


            <!-- content section starts here  -->

            <section id="content">

                <div class="main-container">

                    <div class="container2">

                        <div class="row g-lg-5 g-xl-5 g-md-3 g-sm-2 g-2 justify-content-center">

                            <!-- left column included here  -->

                            <%- include('./common/left') %>


                                <div class="column-center column  col-12 col-sm-10 col-md-6 col-lg-6 col-xl-6">

                                    <div class="card">

                                        <div class="top">

                                            <h1>

                                                ہم سے رابطہ کریں۔

                                            </h1>

                                        </div>

                                        <div class="content">

                                            <div class="form-container">

                                                <form action="">

                                                    <label for="name">: اپنا نام درج کریں
                                                    </label>
                                                    <input type="text" id="name" name="Name" required minlength="3"
                                                        maxlength="15">


                                                    <label for="email">
                                                        : اپنا ای میل درج کریں
                                                    </label>
                                                    <input type="text" id="email" name="Email" required>

                                                    <label for="number">
                                                        : اپنا فون نمبر درج کریں
                                                    </label>
                                                    <input type="text" id="number" name="Mobile Number" required
                                                        pattern="[0-9]{10}">

                                                    <label for="subject">
                                                        :اپنا مضمون درج کریں
                                                    </label>
                                                    <input type="text" id="subject" name="Subject" reauired
                                                        minlength="3">

                                                    <label for="message">
                                                        : اپنا پیغام درج کریں
                                                    </label>

                                                    <textarea id="message" required minlength="3"
                                                        name="Message"></textarea>

                                                    <p class="message" style="color:var(--blue);font-size:12px;"></p>

                                                    <div class="submit-container">

                                                        <input type="submit" value="ارسال کریں">

                                                    </div>

                                                    <div class="data-loading"></div>

                                                </form>

                                            </div>

                                        </div>
                                    </div>

                                </div>

                                <!-- right column included here  -->

                                <%- include('./common/right') %>

                        </div>

                    </div>

                </div>

            </section>


            <!-- footer included here  -->

            <%- include('./common/footer') %>


                <!-- own contact js file link  -->
                <script src="./javascript/contact.js"></script>

</body>

</html>